{
  "dependencies": {
    "cloudinary": "^1.32.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.1",
    "mongodb": "^4.10.0",
    "mongoose": "^6.6.3"
  },
  "devDependencies": {
    "concurrently": "^7.4.0",
    "nodemon": "^2.0.20"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "npm start --prefix frontend",
    "credence": "concurrently \"npm run dev\" \"npm run client\" ",
    "build-scss": "npm run build-scss --prefix frontend",
    "watch-scss": "npm run watch-scss --prefix frontend",
    "render-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend && npm run build-scss && npm run build --prefix frontend"
  }
}
